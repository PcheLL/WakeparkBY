                        android:textColor="#ffffff">
                    </TextView>

                    <TextView
                        android:id="@+id/textView4444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:text=""
